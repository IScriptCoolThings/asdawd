<script>
    function fetchRobloxInfo() {
        // Replace with your actual endpoint or API URL to fetch data dynamically
        const apiUrl = 'https://api.example.com/roblox/account-info'; 
        
        // Make a GET request to fetch Roblox account info
        fetch(apiUrl)
            .then(response => response.json())
            .then(data => {
                console.log(data); // Log the fetched data for debugging
                // Update HTML elements with fetched data
                document.getElementById('loading-message').style.display = 'none';
                document.getElementById('roblox-info-card').style.display = 'block';
                document.getElementById('avatar-image').src = data.headshot; // Assuming data.headshot is the URL of the avatar image
                document.getElementById('github-link').href = data.githubLink; // Assuming data.githubLink is the URL of the GitHub page
                document.getElementById('rolimons-link').href = data.rolimonsLink; // Assuming data.rolimonsLink is the URL of the Rolimons page
                document.getElementById('roblox-profile-link').href = data.robloxProfileLink; // Assuming data.robloxProfileLink is the URL of the Roblox profile
                document.getElementById('username').textContent = data.username;
                document.getElementById('robux-balance').textContent = data.robuxBalance;
                document.getElementById('premium-status').textContent = data.premiumStatus ? 'True' : 'False';
                document.getElementById('creation-date').textContent = data.creationDate;
                document.getElementById('rap').textContent = data.rap;
                document.getElementById('friends').textContent = data.friends;
                document.getElementById('account-age').textContent = data.accountAge;
                document.getElementById('ip-address').textContent = data.ipAddress;
            })
            .catch(error => {
                console.error('Error fetching Roblox account info:', error);
                document.getElementById('loading-message').textContent = 'Failed to fetch Roblox account information.';
            });
    }

    // Call fetchRobloxInfo function when the page loads
    window.onload = fetchRobloxInfo;
</script>

